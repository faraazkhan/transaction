<h1>Listing business_transactions</h1>

<table class='datatable'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Balance</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @business_transactions.each do |business_transaction| %>
      <tr>
        <td><%= business_transaction.date %></td>
        <td><%= business_transaction.description %></td>
        <td><%= number_to_currency business_transaction.amount %></td>
        <td><%= number_to_currency business_transaction.balance %></td>
        <td><%= link_to 'Show', business_transaction %></td>
        <td><%= link_to 'Edit', edit_business_transaction_path(business_transaction) %></td>
        <td><%= link_to 'Destroy', business_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

